<aside class="exit_popup hidden">
    <p class="title"><b>20% OFF</b> YOUR FIRST CLEAN.</p>

    <p class="text">We're certain that we will impress you.</p>

    <a class="cta" href="#get-a-quote" aria-label="Book Now">Book Now.</a>

    <button role="button" class="close"></button>
</aside>

<style>
    aside {
        display: flex;
        flex-direction: column;
        position: fixed;
        inset: 0;
        margin: auto;
        z-index: 10;
        height: fit-content;
        justify-content: center;
        align-items: center;
        background-color: var(--light);
        width: fit-content;
        padding: clamp(2rem,12vw,6rem) clamp(2rem,3vw,5rem);
        border-radius: clamp(1rem,3vw,3rem);
        text-align: center;
        max-width: 85vw;
        box-sizing: border-box;
        border: 0.6rem solid var(--c1-c);
        box-shadow: 0 0rem 15rem 5rem var(--c2-a);
    }

    aside.hidden {
        opacity: 0;
        visibility: 0;
        pointer-events: none;
    }

    .title {
        font-size: clamp(2.1rem,9vmin,4.6rem);
        font-weight: 700;
        color: var(--c2-a);
    }

    .title b {
        color: var(--c2-b);
    }

    .text {
        font-size: clamp(1.8rem, 3vw, 2.1rem);
        margin-block: clamp(1rem,4vw,1.5rem) clamp(1rem,4vw,2.5rem);
        font-weight: 600;
        color: var(--dark-a);
        width: 70%;
    }

    .cta {
        background-color: var(--c2-a);
        color: var(--light);
        font-weight: 600;
    }

    .close {
        position: absolute;
        position: absolute;
        top: clamp(1rem, 2vw, 2rem);
        right: clamp(1rem, 2vw, 2rem);
        width: 2rem;
        height: 2rem;
    }

    .close::before, .close::after {
        content:'';
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 0.4rem;
        background-color: var(--dark-a);
        position: absolute;
    }

    .close::after {
        transform: rotate(-45deg);
    }

    .close::before {
        transform: rotate(45deg);
    }
</style>

<script>
    const closeBts = document.querySelectorAll('.exit_popup .close, .exit_popup .cta')

    let exitPoput = document.querySelector('.exit_popup');

    let exitPopupHasAppeared = false;

    function closePopup() {
        exitPoput.classList.add('hidden')
    }

    for(let i = 0; i < closeBts.length; i++) {
        closeBts[i].addEventListener('click', closePopup)
    }

    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(() => {
            document.addEventListener("mouseleave", function(event){
                if(!exitPopupHasAppeared) {
                    exitPopupHasAppeared = true;

                    exitPoput.classList.remove('hidden')
                } else {
                    return;
                };
            })
        }, 2000);
    });

</script>